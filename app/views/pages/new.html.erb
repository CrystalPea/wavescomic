<h1>Add a new Page</h1>

<%= form_with model: @page do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @page.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :page %><br>
    <%= form.text_field :page %>
    <% @page.errors.full_messages_for(:page).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% @page.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
